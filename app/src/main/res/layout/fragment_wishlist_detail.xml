<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WishlistDetailFragment">

    <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_arrow_back_24" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#F2F1EF">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wishlist Name"
            android:padding="8dp"
            style="@style/TextAppearance.MyApp.TitleMedium"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:maxHeight="256dp"
            android:layout_marginHorizontal="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$500"
                android:layout_margin="8dp"
                style="@style/TextAppearance.Material3.TitleMedium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$30 per week"
                android:layout_marginHorizontal="8dp"
                style="@style/TextAppearance.MyApp.TitleSmall"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created date"
                    style="@style/TextAppearance.Material3.BodySmall"/>

                <TextView
                    android:id="@+id/tv_created_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="1/1/2024"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_toRightOf="@id/tv_created"/>

                <TextView
                    android:id="@+id/tv_estimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated week left"
                    android:layout_below="@id/tv_created"
                    style="@style/TextAppearance.Material3.BodySmall"/>

                <TextView
                    android:id="@+id/tv_estimate_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="17 week left"
                    android:layout_below="@id/tv_created_date"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_toRightOf="@id/tv_estimate"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount collected"
                    android:layout_below="@id/tv_estimate"
                    style="@style/TextAppearance.Material3.BodySmall"/>

                <TextView
                    android:id="@+id/tv_amount_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="$30"
                    android:layout_below="@id/tv_estimate_date"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_toRightOf="@id/tv_amount"/>

                <TextView
                    android:id="@+id/tv_amount_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount remaining"
                    android:layout_below="@id/tv_amount"
                    style="@style/TextAppearance.Material3.BodySmall"/>

                <TextView
                    android:id="@+id/tv_amount_remaining_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="$470"
                    android:layout_below="@id/tv_amount_value"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_toRightOf="@id/tv_amount"/>

            </RelativeLayout>
        </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>