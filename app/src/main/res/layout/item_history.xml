<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 May, 15.00"
        android:layout_margin="8dp"
        style="@style/TextAppearance.MyApp.BodySmall"/>

    <TextView
        android:id="@+id/history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_alignStart="@id/history_date"
        android:layout_below="@id/history_date"/>

    <TextView
        android:id="@+id/history_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$20"
        android:layout_toRightOf="@id/history_name"
        android:layout_alignTop="@id/history_name"
        android:gravity="end"
        android:paddingEnd="8dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_name"
        app:dividerInsetStart="8dp"
        app:dividerInsetEnd="8dp"
        app:dividerThickness="2dp"
        app:dividerColor="#E3E8E0"/>

</RelativeLayout>